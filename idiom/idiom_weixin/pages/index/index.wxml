<!--index.wxml-->
<view class="container">
	<view class="table" style="flex-direction:row;">
		<block wx:for="{{levels}}" wx:key="key" wx:for-item="item">
			<view class="td">
				<block wx:if="{{item.level_number <= user_level_number}}">
					<button id="{{item._id}}" data-item="{{item}}" class="pass" bindtap="levelClick">{{item.level_number}}</button>
				</block>
				<block wx:elif="{{item.level_number == (user_level_number + 1)}}">
					<button id="{{item._id}}" data-item="{{item}}" class="unlock" bindtap="levelClick" style="background-image: url(../../image/unlock.png);">{{item.level_number}}</button>
				</block>
				<block wx:else>
					<button id="{{item._id}}" data-item="{{item}}" class="lock" bindtap="levelClick" style="background-image:url('../../image/lock.png');">{{item.level_number}}</button>
				</block>
			</view>
		</block>
	</view>
</view>
